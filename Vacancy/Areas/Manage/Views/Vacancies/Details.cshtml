@model List<Vacancy.Models.JobLang>
@{
    ViewBag.Title = "Deatils";
    Layout = "~/Areas/Manage/Views/Shared/_Layout1.cshtml";
}
<div class="page">
    <div id="room">

        <div class="header">
            <div class="row flex-column">
                <div class="col-md-9">
                    <h1><i class="fas fa-hotel"></i>Vakansiyalar bölməsi - Ətraflı</h1>
                </div>
                <div class="col-md-3 text-left pr-0 mb-4">
                    <a href="@Url.Action("index", "vacancies")" class="btn btn-primary">Geri qayıt</a>
                </div>
            </div>
        </div>
        <div class="">
            <input type="hidden" name="JobId" value="@Model[0].JobId" />
            @foreach (var item in Model)
            {
        <div class="card">
            <h5 class="card-header">@item.Title (@item.Language.Name)</h5>
            <h5 class="card-header">Kateqoriya : @item.Job.Category.CategoryLangs.FirstOrDefault(w => w.Status == true).Name</h5>
            <div class="card-body">

                <table class="table table-hovered mt-0">

                    <thead class="thead-dark">
                        <tr>
                            <th>Şəhər:</th>
                            <th>İş rejimi:</th>
                            <th>Əmək haqqı:</th>
                            <th>Təcrübə:</th>
                            <th>Yüklənmə tarixi:</th>
                            <th>Bitmə tarixi:</th>
                        </tr>
                    </thead>

                    <tbody style="background-color: lavender;">
                        <tr>
                            <td>@item.Job.Location1.Name</td>
                            <td>@item.Job.JobType.JobTypeLangs.FirstOrDefault(w => w.Status == true).Name</td>
                            <td>@item.Job.Salary azn</td>
                            <td>@item.Job.Experience.Name il</td>
                            <td>@item.Job.PublishDate.ToString("dd.MM.yyyy")</td>
                            <td>@item.Job.Deadline.ToString("dd.MM.yyyy")</td>
                        </tr>
                    </tbody>
                </table>

                <label for="text">Açıqlama:</label>
                <p class="card-text">@item.Description</p>
            </div>
        </div>
            }

        </div>
    </div>
</div>
