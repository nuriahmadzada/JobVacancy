@model Vacancy.Models.Contact
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_Layout1.cshtml";
}

    <div class="page">
        <div id="room">

            <div class="header">
                <div class="row d-flex flex-column">
                    <div class="col-6">
                        <h1><i class="fas fa-phone-square"></i>Bizimlə Əlaqə bölməsi</h1>
                    </div>
                </div>
            </div>

            <div class="room-list">
                <table class="table table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Ünvan</th>
                            <th>Email</th>
                            <th>Telefon</th>
                            <th>#</th>
                        </tr>
                    </thead>
                    <tbody style="background-color: lavender;">
                        <tr>
                            <td>
                                <div class="icon">
                                    <i class="fas fa-map-marker-alt"></i>
                                </div>
                                <div class="">
                                    @Model.Location
                                </div>
                            </td>
                            <td>
                                <div class="icon">
                                    <i class="fas fa-envelope"></i>
                                </div>
                                @Model.Email
                            </td>
                            <td>
                                <div class="icon">
                                    <i class="fas fa-phone"></i>
                                </div>
                                @Model.Phone
                            </td>
                            <td>
                                <a href="@Url.Action("edit", "contact", new {Area="manage", id = Model.Id })" class="btn btn-info text-white">Redaktə et</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>