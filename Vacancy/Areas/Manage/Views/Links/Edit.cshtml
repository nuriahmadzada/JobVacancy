@model List<Vacancy.Models.ServiceElement>
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Manage/Views/Shared/_Layout1.cshtml";
}

<div class="page">
    <div id="room">

        <div class="header">
            <div class="row">
                <div class="col-md-9">
                    <h1><i class="fas fa-users-cog"></i>Faydalı linklər bölməsi - Redaktə et</h1>
                </div>
                <div class="col-md-3 text-right">
                    <a href="@Url.Action("index", "links")" class="btn btn-primary">Geri qayıt</a>
                </div>
            </div>
        </div>

        <div class="d-flex">

            <form method="post" action="@Url.Action("edit","services",new { Area="manage"})">

                <div class="d-flex">
                    @foreach (var item in Model)
                    {
                        <input type="hidden" name="LangId[]" value="@item.Language.Id" />
                        <div class=" col-md-7">
                            <h4>@item.Language.Name</h4>
                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    <label for="room-no">Sual:</label>
                                    <input type="text" class="form-control" name="Question" value="@item.Question">
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    <label for="desc">Cavab:</label>
                                    <textarea class="form-control" name="Answer" cols="10" rows="10">@item.Answer</textarea>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <button type="submit" class="btn btn-success">Yadda Saxla</button>
            </form>
        </div>
    </div>
</div>
