@model List<Vacancy.Models.LinkElement>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_Layout1.cshtml";
    int sira = 1;
}

<div class="page">
    <div id="room">

        <div class="header">
            <div class="row">
                <div class="col-md-9">
                    <h1><i class="fas fa-users-cog"></i>Faydalı linklər bölməsi</h1>
                </div>
                <div class="col-md-3 text-right">
                    <a href="@Url.Action("create", "links")" class="btn btn-success">Yenisini Yarat</a>
                </div>
            </div>
        </div>

        <div class="room-list">
            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>№</th>
                        <th>Dil</th>
                        <th>Sual</th>
                        <th>Cavab</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @(sira++)
                            </td>
                            <td>
                                @item.Language.Name
                            </td>
                            <td>
                                @item.Question
                            </td>
                            <td style="width: 37%">
                                @item.Answer.Substring(0, 80)
                            </td>
                            <td>
                                <a href="@Url.Action("detail", "links", new { Area = "Manage", Id = item.Id})" class="btn btn-success">Ətraflı</a>
                                <a href="@Url.Action("edit", "links", new { Area = "Manage", Id = item.Id})" class="btn btn-primary">Redaktə et</a>
                                <a onclick="return confirm('@item.Question adlı Sualı silmək istədiyinizə əminsiniz?')" href="@Url.Action("delete", "services", new { Area = "Manage", Id = item.Id})" class="btn btn-danger">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>