@model Vacancy.Models.Message
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Manage/Views/Shared/_Layout1.cshtml";
}

    <div class="page">
        <div id="room">

            <div class="header">
                <div class="row flex-column">
                    <div class="col-md-9">
                        <h1><i class="fas fa-envelope"></i>Mesajlar bölməsi - Ətraflı</h1>
                    </div>
                    <div class="col-md-3 text-left pr-0 mb-4">
                        <a href="@Url.Action("index", "messages")" class="btn btn-primary">Geri qayıt</a>
                    </div>
                </div>
            </div>
            <div class="">
                <div class="card">
                    <h5 class="card-header">@Model.Subject</h5>
                    <div class="card-body">
                        <table class="table table-hovered mt-0">

                            <thead class="thead-dark">
                                <tr>
                                    <th>Ad</th>
                                    <th>Email</th>
                                    <th>Telefon</th>
                                </tr>
                            </thead>

                            <tbody style="background-color: lavender;">
                                <tr>
                                    <td>@Model.Name</td>
                                    <td>@Model.Email</td>
                                    <td>@Model.Phone</td>
                                </tr>
                            </tbody>
                        </table>

                        <label for="text" style="font-weight:bold; font-size:20px">Mesaj:</label>
                        <p class="card-text">@Model.Text</p>
                    </div>
                </div>
            </div>
        </div>
    </div>