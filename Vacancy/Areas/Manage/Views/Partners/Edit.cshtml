@model Vacancy.Models.Partner

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Manage/Views/Shared/_Layout1.cshtml";
}

<div class="page">
    <div id="room">

        <div class="header">
            <div class="row flex-column">
                <div class="col-md-9">
                    <h1><i class="fas fa-hotel"></i>Tərəfdaşlar bölməsi - Redaktə</h1>
                </div>
                <div class="col-md-3 text-left pr-0 mb-4">
                    <a href="@Url.Action("index", "partners")" class="btn btn-primary">Geri qayıt</a>
                </div>
            </div>
        </div>

        <div class="">
            <form method="post" enctype="multipart/form-data" action="@Url.Action("edit", "partners", new { Area = "Manage" })">
                <input type="hidden" name="Id" value="@Model.Id" />
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="room-no">Tərəfdaş Şirkətin adı:</label>
                        <input type="text" class="form-control" name="Name" value="@Model.Name">
                    </div>
                </div>
                <div class="form-row col-md-6 p-0">
                    <div class="form-group col-md-6">
                        <label for="room-no">Tərəfdaş Şirkətin Ünvanı:</label>
                        <input type="text" class="form-control" name="Location" value="@Model.Location">
                    </div>
                </div>

                <div class="form-row flex-column">
                    <div class="form-group col-md-6">
                        <label for="Photo">Şəkil Yüklə:</label>
                        <input type="file" name="Photo" class="form-control" id="photo">
                        <input type="hidden" value="" name="OldPhoto" />
                    </div>
                    <div class="form-group col-md-6">
                        <img src="~/Uploads/@Model.Photo" height="150" />
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-md-12">
                        <button class="btn btn-success">Yadda Saxla</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>