@model Vacancy.Models.Partner
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Manage/Views/Shared/_Layout1.cshtml";
}

    <div class="page">
        <div id="room">

            <div class="header">
                <div class="row flex-column">
                    <div class="col-md-9">
                        <h1><i class="fas fa-hotel"></i>Tərəfdaşlar bölməsi - Yarat</h1>
                    </div>
                    <div class="col-md-3 text-left pr-0 mb-4">
                        <a href="@Url.Action("index", "partners")" class="btn btn-primary">Geri qayıt</a>
                    </div>
                </div>
            </div>

            <div class="">
                <form method="post" action="@Url.Action("create","partners", new { Area="manage" })"  enctype="multipart/form-data">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="room-no">Tərəfdaş Şirkətin adı:</label>
                            <input type="text" name="Name" class="form-control" id="room-no">
                        </div>
                    </div>
                    <div class="form-row col-md-6 p-0">
                        <div class="form-group col-md-12">
                            <label for="room-no">Tərəfdaş Şirkətin Ünvanı:</label>
                            <input type="text" name="Location" class="form-control" id="room-no">
                        </div>

                        <div class="form-group col-md-6">
                            <label for="room-no">Şəkil Yüklə:</label>
                            <input type="file" name="Photo" class="form-control" required />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-success">Yarat</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

