@model IEnumerable<Vacancy.Models.Subscriber>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_Layout1.cshtml";
    int sira = 1;
}

<div class="page">
    <div id="room">
        <div class="header">
            <div class="row">
                <div class="col-6">
                    <h1><i class="fas fa-book-open"></i>İzləyicilərimiz bölməsi</h1>
                </div>
            </div>
        </div>

        <div class="room-list">
            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>№</th>
                        <th></th>
                        <th>Email</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var items in Model)
                    {
                        <tr>
                            <td>
                                @(sira++)
                            </td>
                            <td>
                                <div class="icon">
                                    <i class="fas fa-user"></i>
                                </div>
                            </td>
                            <td>
                                @items.Email
                            </td>
                            <td>
                                <a onclick="return confirm('Bu izləyicini silmək istədiyinizə əminsiniz?')" href="@Url.Action("delete",  new { Id = items.Id })" class="btn btn-danger text-white">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>