@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Manage/Views/Shared/_Layout1.cshtml";
}

    <div class="page">
        <div id="room">

            <div class="header">
                <div class="row">
                    <div class="col-md-9">
                        <h1><i class="fas fa-users-cog"></i>Xidmətlərimiz bölməsi - Yarat</h1>
                    </div>
                    <div class="col-md-3 text-right">
                        <a href="@Url.Action("index", "services")" class="btn btn-primary">Geri qayıt</a>
                    </div>
                </div>
            </div>

            <div class="d-flex">
                <form method="post" action="@Url.Action("create","services",new { Area="manage"})">

                    <div class="d-flex">
                        @foreach (var lang in ViewBag.Langs)
                        {
                            <input type="hidden" name="LangId[]" value="@lang.Id" />
                            <div class=" col-md-7">
                                <h4>@lang.Name</h4>
                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <label for="room-no">Sual:</label>
                                        <input type="text" class="form-control" name="Question" placeholder="Sual...">
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <label for="desc">Cavab:</label>
                                        <textarea class="form-control" name="Answer" cols="10" rows="10"></textarea>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <button type="submit" class="btn btn-success">Yarat</button>
                </form>
            </div>
        </div>
    </div>