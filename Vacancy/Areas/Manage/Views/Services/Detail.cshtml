@model List<Vacancy.Models.ServiceElement>
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Manage/Views/Shared/_Layout1.cshtml";
}

    <div class="page">
        <div id="room">

            <div class="header">
                <div class="row">
                    <div class="col-md-9">
                        <h1><i class="fas fa-users-cog"></i>Xidmətlərimiz bölməsi - Ətraflı</h1>
                    </div>
                    <div class="col-md-3 text-right">
                        <a href="@Url.Action("index", "services")" class="btn btn-primary">Geri qayıt</a>
                    </div>
                </div>
            </div>

            <div class="">
                <input type="hidden" name="Id" value="@Model[0].Id" />
                @foreach (var item in Model)
                {
                    <div class="card">
                        <h5 class="card-header">@item.Question (@item.Language.Name)</h5>
                        <div class="card-body">
                            <label for="text" style="font-weight:bold; font-size:20px">Cavab:</label>
                            <p class="card-text">@item.Answer</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
