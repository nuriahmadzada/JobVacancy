@model IEnumerable<Vacancy.Models.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_Layout1.cshtml";
}

<div class="page">
    <div id="room">

        <div class="header">
            <div class="row d-flex flex-column">
                <div class="col-6">
                    <h1><i class="fas fa-address-card"></i>Haqqımızda bölməsi</h1>
                </div>
            </div>
        </div>

        <div class="room-list">
            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Dil</th>
                        <th>Şəkil</th>
                        <th>Başlıq</th>
                        <th>Açıqlama</th>
                        <th>#</th>
                    </tr>
                </thead>

                <tbody style="background-color: lavender;">
                    @foreach (var about in Model)
                    {
                    <tr>
                        <td style="width:12%">
                      @about.Language.Name
                        </td>
                        <td style="width:15%">
                            <div class="photo">
                                <img src="~/Uploads/@about.Photo" alt="">
                            </div>
                        </td>
                        <td style="width:12%">
                           @about.Title
                        </td>
                        <td style="width:35%">
                                @about.Description
                        </td>
                        <td style="width:13%">
                            <a href="@Url.Action("edit", "about", new {Area="manage", id =about.Id })" class="btn btn-info text-white">Redaktə et</a>
                        </td>
                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>