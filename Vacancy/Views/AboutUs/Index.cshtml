@using  Vacancy.Resources
@model Vacancy.Models.About
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb -->
<div class="alice-bg padding-top-70 padding-bottom-70">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="breadcrumb-area">
                    <h1>@Resource.About</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("index", "home")">@Resource.Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">@Resource.About</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Candidates Details -->
<div class="alice-bg section-padding-bottom">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="white-bg others-block">
                    <div class="about-company">
                        <div class="row">
                            <div class="col-lg-6 order-lg-2">
                                <div class="feature-thumb">
                                    <img src="~/Uploads/@Model.Photo" class="img-fluid" alt="">
                                </div>
                            </div>
                            <div class="col-lg-6 order-lg-1">
                                <div class="feature-content">
                                    <h3>@Model.Title</h3>
                                    <p>
                                        @Model.Description
                                    <p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Fun Facts -->
                    <div class="padding-top-90 padding-bottom-60 fact-bg">
                        <div class="container">
                            <div class="row fact-items">
                                <div class="col-md-3 col-sm-6">
                                    <div class="fact">
                                        <div class="fact-icon">
                                            <i data-feather="briefcase"></i>
                                        </div>
                                        <p class="fact-number"><span class="count" data-form="0" data-to="376"></span></p>
                                        <p class="fact-name">@Resource.Livejob</p>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-6">
                                    <div class="fact">
                                        <div class="fact-icon">
                                            <i data-feather="users"></i>
                                        </div>
                                        <p class="fact-number"><span class="count" data-form="0" data-to="562"></span></p>
                                        <p class="fact-name">@Resource.Candidate</p>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-6">
                                    <div class="fact">
                                        <div class="fact-icon">
                                            <i data-feather="file-text"></i>
                                        </div>
                                        <p class="fact-number"><span class="count" data-form="0" data-to="166"></span></p>
                                        <p class="fact-name">@Resource.Resume</p>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-6">
                                    <div class="fact">
                                        <div class="fact-icon">
                                            <i data-feather="award"></i>
                                        </div>
                                        <p class="fact-number"><span class="count" data-form="0" data-to="366"></span></p>
                                        <p class="fact-name">@Resource.Companies</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Testimonial -->
                    <div class="padding-bottom-90">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="testimonial">
                                        <div class="testimonial-for mt-5">
                                            <div class="testimonial-item">
                                                <p>
                                                    @Resource.AboutFoot
                                                </p>
                                                <h5>Maria Marlin Google</h5>
                                            </div>
                                            <div class="testimonial-item">
                                                <p>
                                                    @Resource.AboutFoot
                                                </p>
                                                <h5>Laura Harper Amazon</h5>
                                            </div>
                                            <div class="testimonial-item">
                                                <p>
                                                    @Resource.AboutFoot
                                                </p>
                                                <h5>John Doe Envato</h5>
                                            </div>
                                            <div class="testimonial-item">
                                                <p>
                                                    @Resource.AboutFoot
                                                </p>
                                                <h5>Jenny Doe Dribbble</h5>
                                            </div>
                                            <div class="testimonial-item">
                                                <p>
                                                    @Resource.AboutFoot
                                                </p>
                                                <h5>Michle Clark Apple</h5>
                                            </div>
                                            <div class="testimonial-item">
                                                <p>
                                                    @Resource.AboutFoot
                                                </p>
                                                <h5>Laura Harper Amazon</h5>
                                            </div>
                                            <div class="testimonial-item">
                                                <p>
                                                    @Resource.AboutFoot
                                                </p>
                                                <h5>John Doe Envato</h5>
                                            </div>
                                        </div>
                                        <div class="testimonial-nav">
                                            <div class="commenter-thumb">
                                                <img src="~/Sources/images/testimonial/thumb-1.jpg" class="img-fluid commenter" alt="">
                                                <img src="~/Sources/images/testimonial/1.png" class="comapnyLogo" alt="">
                                            </div>
                                            <div class="commenter-thumb">
                                                <img src="~/Sources/images/testimonial/thumb-2.jpg" class="img-fluid commenter" alt="">
                                                <img src="~/Sources/images/testimonial/2.png" class="comapnyLogo" alt="">
                                            </div>
                                            <div class="commenter-thumb">
                                                <img src="~/Sources/images/testimonial/thumb-3.jpg" class="img-fluid commenter" alt="">
                                                <img src="~/Sources/images/testimonial/3.png" class="comapnyLogo" alt="">
                                            </div>
                                            <div class="commenter-thumb">
                                                <img src="~/Sources/images/testimonial/thumb-4.jpg" class="img-fluid commenter" alt="">
                                                <img src="~/Sources/images/testimonial/4.png" class="comapnyLogo" alt="">
                                            </div>
                                            <div class="commenter-thumb">
                                                <img src="~/Sources/images/testimonial/thumb-5.jpg" class="img-fluid commenter" alt="">
                                                <img src="~/Sources/images/testimonial/5.png" class="comapnyLogo" alt="">
                                            </div>
                                            <div class="commenter-thumb">
                                                <img src="~/Sources/images/testimonial/thumb-2.jpg" class="img-fluid commenter" alt="">
